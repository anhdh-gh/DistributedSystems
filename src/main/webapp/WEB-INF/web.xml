<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/pages/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/pages/error.jsp</location>
    </error-page>
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ClearSessionFilter</filter-name>
        <url-pattern>/signin</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>NoCacheFilter</filter-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/service/tutorial</url-pattern>
        <url-pattern>/algorithm/vector-timestamp</url-pattern>
        <url-pattern>/algorithm/schlosser</url-pattern>
        <url-pattern>/algorithm/berkeley</url-pattern>
        <url-pattern>/algorithm/trung-binh</url-pattern>
        <url-pattern>/algorithm/bau-chon-khong-day</url-pattern>
        <url-pattern>/algorithm/cristian-ntp</url-pattern>
        <url-pattern>/algorithm/cristian</url-pattern>
        <url-pattern>/service/berkeley</url-pattern>
        <url-pattern>/service/rbs</url-pattern>
        <url-pattern>/service/trung-binh</url-pattern>
        <url-pattern>/service/cristian-ntp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/service/tutorial</url-pattern>
        <url-pattern>/algorithm/vector-timestamp</url-pattern>
        <url-pattern>/algorithm/schlosser</url-pattern>
        <url-pattern>/algorithm/berkeley</url-pattern>
        <url-pattern>/algorithm/trung-binh</url-pattern>
        <url-pattern>/algorithm/bau-chon-khong-day</url-pattern>
        <url-pattern>/algorithm/cristian-ntp</url-pattern>
        <url-pattern>/algorithm/cristian</url-pattern>
        <url-pattern>/service/berkeley</url-pattern>
        <url-pattern>/service/rbs</url-pattern>
        <url-pattern>/service/trung-binh</url-pattern>
        <url-pattern>/service/cristian-ntp</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>com.sun.xml.ws.transport.http.servlet.WSServletContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>ExamForBerkeley</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ExamForTrungBinh</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ExamForCristianNTP</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ExamForRbs</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExamForBerkeley</servlet-name>
        <url-pattern>/ExamForBerkeley</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExamForTrungBinh</servlet-name>
        <url-pattern>/ExamForTrungBinh</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExamForCristianNTP</servlet-name>
        <url-pattern>/ExamForCristianNTP</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExamForRbs</servlet-name>
        <url-pattern>/ExamForRbs</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            120
        </session-timeout>
    </session-config>
</web-app>
